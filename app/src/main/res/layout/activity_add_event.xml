<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:id="@+id/activity_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/close_button"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/close"
            android:background="@color/colorPrimary"/>
        <Button
            android:id="@+id/save_button"
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="24dp"
            android:text="Save"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:stateListAnimator="@null"/>
        <EditText
            android:id="@+id/event_header"
            android:hint="Title, time"
            android:textColorHint="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:textCursorDrawable="@color/white"
            android:textColor="@color/white"
            android:background="@null"
            android:stateListAnimator="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="100dp">
        <TextView
            android:id="@+id/date_picker"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Pick Date"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray" />
        <TextView
            android:id="@+id/time_picker"
            android:layout_marginTop="53dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Pick Time"
            android:textSize="25dp"
            tools:ignore="MissingConstraints" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="10dp"
            android:background="@color/gray" />
        <TextView
            android:id="@+id/non_recursive"
            android:layout_marginTop="98dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Non Recursive"
            android:textSize="25dp"
            android:visibility="visible"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:id="@+id/non_recursive_copy"
            android:layout_marginTop="98dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Non Recursive"
            android:textSize="25dp"
            android:visibility="invisible"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:id="@+id/daily_picker"
            android:layout_marginTop="133dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Daily"
            android:textSize="25dp"
            android:visibility="invisible"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/weekly_picker"
            android:layout_marginTop="168dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Weekly"
            android:textSize="25dp"
            android:visibility="invisible"
            tools:ignore="MissingConstraints"/>
        <TextView
            android:id="@+id/monthly_picker"
            android:layout_marginTop="203dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Monthly"
            android:textSize="25dp"
            android:visibility="invisible"
            tools:ignore="MissingConstraints"/>
        <View
            android:id="@+id/lineTop"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="135dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:background="@color/gray" />
        <View
            android:id="@+id/lineBottom"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="240dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            android:background="@color/gray" />
    </RelativeLayout>



</android.support.constraint.ConstraintLayout>